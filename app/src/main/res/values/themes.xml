<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KindyStarts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/comic_neue_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/app_background_color</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.App.TextInputLayout.Underline"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/app_background_color</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Widget.App.TextInputLayout.Underline.ExposedDropdownMenu"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/app_background_color</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Theme.App.RegisterScreen" parent="Base.Theme.KindyStarts">
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Underline</item>
    </style>





    <style name="Theme.KindyStarts" parent="Base.Theme.KindyStarts"  />
</resources>